  ul {
    display: grid;
    gap: 20px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    display: grid;
    grid-auto-flow: row;
    gap: 12px;

    h3 {
      padding-block-start: 10px;
    }

    h3,
    p {
      margin: 0 !important;
    }
  }

  @container getting-started-container (width >= 640px) {
    ul {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @container getting-started-container (width >= 1024px) {
    .content-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
      margin-block-start: 2rem;
    }

    .cards-content {
      display: grid;
      gap: 2rem;
      align-content: start;
      margin-block-start: 1rem;
    }

    ul {
      gap: 30px;
    }
  }

  @container getting-started-container (width >= 1280px) {
    .content-grid {
      padding-inline: 4rem;
      gap: 4rem;
    }
  }
</style>
