<style>
  .container {
    --bento-item-radius: 1rem;
    --bento-item-padding: 2.5rem;

    container: bento-container / inline-size;
    background-color: var(--bg-secondary);
    margin-inline: calc(var(--sl-content-pad-x) * -1);
    margin-block: 4rem !important;
    padding-block: 6rem;
  }

  .bento-grid {
    display: grid;
    grid-template: auto auto / repeat(5, 1fr);
    gap: 1.5rem;
    max-width: 72rem;
    margin-inline: auto;
  }

  .bento-grid-item {
    grid-column: span 3;

    border-radius: var(--bento-item-radius);
    border: 1px solid var(--sl-color-hairline-shade);

    padding: var(--bento-item-padding);

    background-color: var(--sl-color-bg);
    background-image: radial-gradient(
      circle at bottom center,
      var(--bg-secondary),
      rgb(from var(--sl-color-bg) r g b / 0.05)
    );

    overflow: hidden;

    &:nth-child(4n + 1),
    &:nth-child(4n) {
      grid-column: span 2;
    }
  }

  .bento-grid-item h3 {
    font-size: 32px;
    line-height: var(--sl-line-height-headings);
    margin-bottom: 0.65em;
  }

  .bento-grid-item--horizontal {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(2, 1fr);
  }

  .bento-grid-item-image {
    overflow: hidden;
    position: relative;
    min-height: 100%;
    width: calc(100% + var(--bento-item-padding));
    margin-bottom: calc(var(--bento-item-padding) * -1);

    border-top-left-radius: var(--border-radius);

    border-style: solid;
    border-color: var(--sl-color-hairline-shade);
    border-width: 1px;
    border-right: none;
    border-bottom: none;

    box-shadow: 0px 6px 24px 0px var(--bg-emphasis);

    img {
      position: absolute;
      display: block;
      max-width: 100%;
      height: auto;
    }
  }

  .icon-container {
    display: grid;
    justify-content: center;
    font-size: 6rem;
    filter: hue-rotate(320deg) contrast(120%);
  }
</style>
