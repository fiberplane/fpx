<style>
  .container {
    --bento-item-radius: 1.5rem;
    --bento-item-padding: 2.5rem;

    container: bento-container / inline-size;
    max-width: 72rem;
    margin-inline: auto;
  }

  .bento-grid {
    display: grid;
    grid-template: auto auto / repeat(5, 1fr);
    gap: 1.5rem;
  }

  .bento-grid-item {
    /* Override Starlight's margin */
    margin: 0 !important;

    grid-column: span 3;

    border-radius: var(--bento-item-radius);
    border-radius: var(--border-radius);
    border: 1px solid var(--sl-color-hairline-shade);

    background-color: var(--bg-secondary);
    padding-block-start: var(--bento-item-padding);
    padding-inline: var(--bento-item-padding);

    overflow: hidden;

    &:nth-child(4n + 1),
    &:nth-child(4n) {
      grid-column: span 2;
      aspect-ratio: 3 / 4;
      aspect-ratio: 1;
    }
  }

  .bento-grid-item h3 {
    font-size: 32px;
  }

  .bento-grid-item--horizontal {
    div {
      margin: 0 !important;
    }

    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(2, 1fr);
  }

  .bento-grid-item-image {
    overflow: hidden;
    position: relative;
    height: 100%;
    width: calc(100% + var(--bento-item-padding));
    border-top-left-radius: var(--border-radius);

    border-style: solid;
    border-color: var(--sl-color-hairline-shade);
    border-width: 1px;
    border-right: none;
    border-bottom: none;

    box-shadow: 0px 6px 24px 0px var(--bg-emphasis);

    img {
      position: absolute;
    }
  }

  .icon-container {
    display: grid;
    justify-content: center;
    font-size: 6rem;
    filter: hue-rotate(320deg) contrast(120%);
  }
</style>
