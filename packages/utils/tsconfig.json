{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "declaration": true,
      "declarationMap": true,
      "inlineSourceMap": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }