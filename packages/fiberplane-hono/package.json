{
  "name": "@fiberplane/hono",
  "version": "0.4.2-beta.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "license": "MIT or Apache 2",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "format": "biome check . --write",
    "lint": "biome lint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "nodemon --watch src --ext ts,js,json --exec \"pnpm run build\""
  },
  "devDependencies": {
    "@types/node": "*",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "hono": "^4.7.0",
    "nodemon": "^3.1.7",
    "openapi-types": "^12.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "hono": "^4.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "jsonpointer": "^5.0.1",
    "zod": "^3.24.1"
  }
}
