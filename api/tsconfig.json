{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "types": ["vitest/globals", "node"],
    "declaration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "migrate.ts"],
  "exclude": ["node_modules", "dist", "test-content"]
}
